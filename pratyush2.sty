% Theorem environments {{{
\ifpratyush@thm
	\RequirePackage{amsthm, thmtools}
	\theoremstyle{definition}

	\ifpratyush@thmboxed
		\usepackage[framemethod=TikZ]{mdframed}

		% Inspired by evan.sty
		% https://github.com/vEnhance/dotfiles/blob/main/texmf/tex/latex/evan/evan.sty
		\NewDocumentCommand \pratyush@newthmstyle {mmm} {
			% #1: name of box ("thm#1box" will be used)
			% #2: outline/heading color
			% #3: background color
			\mdfdefinestyle{md#1box}{%
				linewidth = 1pt,
				% Using \addvspace works after section headers while the
				% `skipabove` option does not
				beforesingleframe = {\addvspace{12pt}},
				innerbottommargin = 9pt,
				skipbelow = 2pt,
				linecolor = #2,
				nobreak = true,
				backgroundcolor = #3,
			}
			\declaretheoremstyle[
				headfont = {\sffamily\bfseries\color{#2}},
				mdframed = {style=md#1box},
				headpunct = {\\[3pt]},
			]{thm#1box}
		}

		\pratyush@newthmstyle{blue}{blue}{TealBlue!5}
		\pratyush@newthmstyle{red}{RawSienna}{Salmon!5}
		\pratyush@newthmstyle{green}{ForestGreen}{ForestGreen!5}
		\pratyush@newthmstyle{black}{black}{RedViolet!5!gray!5}

		\newcommand\pratyush@thmstyle@thm{thmbluebox}
		\newcommand\pratyush@thmstyle@defn{thmgreenbox}
		\newcommand\pratyush@thmstyle@remark{thmredbox}
	\else
		\newcommand\pratyush@thmstyle@thm{definition}
		\newcommand\pratyush@thmstyle@defn{definition}
		\newcommand\pratyush@thmstyle@remark{definition}
	\fi

	\ifpratyush@thmnums
		\declaretheorem[style=\pratyush@thmstyle@thm]{theorem}
		\declaretheorem[
			style=\pratyush@thmstyle@thm, numbered=no, name=Theorem
		]{theorem*}
		\declaretheorem[
			style=\pratyush@thmstyle@thm, sibling=theorem, name=Proposition
		]{proposition}
		\declaretheorem[
			style=\pratyush@thmstyle@thm, numbered=no, name=Proposition
		]{proposition*}
		\declaretheorem[
			style=\pratyush@thmstyle@thm, sibling=theorem, name=Lemma
		]{lemma}
		\declaretheorem[
			style=\pratyush@thmstyle@thm, numbered=no, name=Lemma
		]{lemma*}
	\else
		\declaretheorem[style=\pratyush@thmstyle@thm, numbered=no]{theorem}
		\declaretheorem[style=\pratyush@thmstyle@thm, numbered=no]{proposition}
		\declaretheorem[style=\pratyush@thmstyle@thm, numbered=no]{lemma}
	\fi

	\ifpratyush@defnnums
		\declaretheorem[
			style=\pratyush@thmstyle@defn, sibling=theorem, name=Definition
		]{definition}
		\declaretheorem[
			style=\pratyush@thmstyle@defn, numbered=no, name=Definition
		]{definition*}
	\else
		\declaretheorem[style=\pratyush@thmstyle@defn, numbered=no]{definition}
	\fi

	\ifpratyush@thmaux
		\declaretheorem[style=\pratyush@thmstyle@remark, numbered=no]{remark}
		\declaretheorem[style=\pratyush@thmstyle@remark, numbered=no]{claim}
		\declaretheorem[style=\pratyush@thmstyle@remark, numbered=no]{fact}
		\declaretheorem[style=\pratyush@thmstyle@remark, numbered=no]{example}
		\declaretheorem[numbered=no]{solution}
	\fi

	\input{pratyush2_namedthm.sty}
\fi
